function handleFileUploadSubmit(e) {
  console.log('Attempting upload of ' + e);
  const uploadTask = storageRef.child(`images/event/`+ e.name).put(e); //create a child directory called images, and place the file inside this directory
  uploadTask.on('state_changed', (snapshot) => {
  // Observe state change events such as progress, pause, and resume
